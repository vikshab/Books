<!DOCTYPE html>
<html>
<head>
  <title>Books</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Navigation  -->
  <nav>
    <ul class="right hide-on-med-and-down">
      <% if request.path == '/' %>
        <li><%= link_to("All books", books_path) %></li>
      <% elsif request.path == "/books/#{params[:book_id]}/reviews"%>
        <li><%= link_to("Home", home_path) %></li>
        <li><%= link_to("All books", books_path) %></li>
        <li><%= link_to("Back", :back) %></li>
      <% elsif request.path == "/books"%>
        <li><%= link_to("Home", home_path) %></li>
        <li><%= link_to("Back", :back) %></li>
        <li><%= link_to("Add a book", new_book_create_path) %></li>
      <% elsif request.path == "/books/new" %>
        <li><%= link_to("Home", home_path) %></li>
        <li><%= link_to("All books", books_path) %></li>
        <li><%= link_to("Back", :back) %></li>
      <% else%>
        <li><%= link_to("Home", home_path) %></li>
        <li><%= link_to("Back", :back) %></li>
      <% end %>
    </ul>
  </nav>
<!--End of navigation  -->

<%= yield %>

<% if flash[:notice] -%>
  <div class='notice'><%= flash[:notice] %></div>
<% end -%>

</body>
</html>
