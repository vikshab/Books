<ul class="collection">
  <% @books.each do |book| %>
 <!-- Front side of card for book's name and author-->
   <li class="collection-item avatar">
     <div class="card">
     <div class="card-content">
       <span class="card-title activator grey-text text-darken-4"><%= book.name %><i class="material-icons right">more_vert</i></span><br>
       <p>Author: <%= book.author %></p>
 <!-- Book's reviews-->
       <%= link_to "Reviews", reviews_path(book.id), class:"waves-effect waves-light" %>
     </div>
 <!-- Back side of card for book description-->
     <div class="card-reveal">
       <span class="card-title grey-text text-darken-4"><%= book.name %> - Short description:<i class="material-icons right">close</i></span><br>
       <p><%= book.description %></p>
     </div>
   </div>
  </li>
 <% end %>
</ul>
